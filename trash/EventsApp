public class EventsApp {
 
    public static void main(String[] args) {
         
        Button button = new Button(new NiggaHandler());
        button.click();
    }
}
 
class ButtonClickHandler implements EventHandler{
     
    public void execute(){
         
        System.out.println("Кнопка нажата!");
    }
}

class NiggaHandler implements EventHandler{
    
    public void execute(){
        System.out.println("NiggaPoop");
    }
}
 
interface EventHandler{
     
    void execute();
}
 
class Button{
     
    EventHandler handler;
    Button(EventHandler action){
         
        this.handler=action;
    }
    public void click(){
         
        handler.execute();
    }
}
